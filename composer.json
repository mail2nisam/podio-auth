{
  "name": "rijosh/podio-auth",
  "description": "Podio authentication including rate-limit controlling",
  "authors": [
    {
      "name": "Rijosh",
      "email": "rr.phases@gmail.com"
    }
  ],
  "require": {
    "podio/podio-php": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "PodioAuth\\": "packages/podio_auth/src"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "php artisan vendor:publish --tag=config --force",
      "php artisan vendor:publish --tag=migrations --force",
      "php artisan vendor:publish",
      "php artisan migrate",
      "php artisan optimize"
    ]
  }
}
